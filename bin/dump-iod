#!perl

# DATE
# VERSION

use 5.010;
use strict;
use warnings;

use App::IODUtils;
use Perinci::CmdLine::Any;

our %SPEC;
$SPEC{dump_iod} = {
    v => 1.1,
    summary => 'Parse IOD using Config::IOD::Reader and display the result',
    args => {
        %App::IODUtils::common_args,
    },
    result_naked => 1,
};
sub dump_iod {
    my %args = @_;

    state $reader = do {
        require Config::IOD::Reader;
        Config::IOD::Reader->new(enable_expr=>$args{enable_expr});
    };

    # for convenience, don't show result envelope by default (result envelope
    # can be shown by using --no-naked-res).
    if ($args{-cmdline_r}) {
        $args{-cmdline_r}{naked_res} //= 1;
    }

    $reader->read_string($args{iod});
}

Perinci::CmdLine::Any->new(
    url => '/main/dump_iod',
    pass_cmdline_object => 1,
)->run;

# ABSTRACT:
# PODNAME:

=head1 SYNOPSIS

Basic usage:

 % dump-iod /path/to/file.iod

