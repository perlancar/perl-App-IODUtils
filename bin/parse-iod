#!perl

# DATE
# VERSION

use 5.010;
use strict;
use warnings;

use App::IODUtils;
use Perinci::CmdLine::Any;

our %SPEC;
$SPEC{parse_iod} = {
    v => 1.1,
    summary => 'Show parse result of IOD configuration file',
    description => <<'_',

IOD is parsed using Perl module `Config::IOD`.

_
    args => {
        %App::IODUtils::common_args,
    },
    result_naked => 1,
    'cmdline.default_format' => 'json-pretty',
};
sub parse_iod {
    require Config::IOD;

    my %args = @_;

    my $parser = Config::IOD->new(enable_expr=>$args{enable_expr});

    $parser->read_string($args{iod})->{_parsed};
}

my $cli = Perinci::CmdLine::Any->new(
    url => '/main/parse_iod',
    pass_cmdline_object => 1,
);

# so help message can be more helpful
$cli->common_opts->{format}{default} = 'json-pretty';
$cli->common_opts->{naked_res}{default} = 1;

$cli->run;

# ABSTRACT:
# PODNAME:

=head1 SYNOPSIS

Basic usage:

 % parse-iod /path/to/file.iod

